{
  "version": "2.4.2",
  "compilerOptions": {
    "strict": false,
    "outDir": "build",
    "lib": ["es5", "es6"],
    "target": "es5",
    "allowJs": true,
    "checkJs": true,
    "rootDir": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "__tests__"
  ]
}

